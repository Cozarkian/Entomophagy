<?xml version="1.0" encoding="utf-8" ?>
<Defs>
   <ThingDef ParentName="BuildingBase">
    <defName>Insect_Hotel</defName>
    <label>insect hotel</label>
    <description>A simple construction perfectly designed for insect nests, allowing the conversion of raw food into insect meat. Must be built outside.</description>
    <thingClass>Building_FermentingBarrel</thingClass>
    <graphicData>
      <texPath>Items/Insect_Hotel</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
      </damageData>
			<drawSize>(1.5,1.5)</drawSize>
			<shaderType>CutoutComplex</shaderType>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.30</fillPercent>
    <pathCost>35</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <statBases>
      <WorkToBuild>600</WorkToBuild>
      <Mass>10</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <WoodLog>30</WoodLog>
    </costList>
    <comps>
			<li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>80.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
					<categories>
						<li>FoodRaw</li>
					</categories>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>false</consumeFuelOnlyWhenUsed>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
    </comps>
    <tickerType>Normal</tickerType>
    <rotatable>true</rotatable>
    <designationCategory>Production</designationCategory>
    <constructEffect>ConstructWood</constructEffect>
    <building>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <destroySound>BuildingDestroyed_Wood_Small</destroySound>
    </building>
		<placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites/>
  </ThingDef>

</Defs>
